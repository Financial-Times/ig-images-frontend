{
  "name": "ig-images-frontend-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@okta/okta-react": "^3.0.7",
    "aphrodite": "^1.2.5",
    "copy-to-clipboard": "^3.0.8",
    "dotenv": "^4.0.0",
    "lodash": "^4.17.20",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-copy-to-clipboard": "^5.0.1",
    "react-dom": "^16.13.1",
    "react-dropzone": "^4.2.0",
    "react-redux": "^7.2.1",
    "react-router-dom": "^5.2.0",
    "react-with-styles": "^2.2.0",
    "react-with-styles-interface-aphrodite": "^3.1.1",
    "redux": "^4.0.5",
    "redux-saga": "^1.1.3"
  },
  "devDependencies": {
    "@financial-times/g-deploy": "^3.1.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-plugin-flowtype": "^7.0.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.6",
    "flow-bin": "^0.170.0",
    "flow-typed": "^3.6.1",
    "react-scripts": "^5.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run flow && npm run lint"
    }
  },
  "scripts": {
    "flow": "flow",
    "flow-install": "flow-typed install",
    "lint": "eslint src",
    "format": "prettier-eslint --write $PWD/'src/**/*.js'",
    "start": "PORT=8000 react-scripts start",
    "build": "rm -rf dist && react-scripts build && mv build dist",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "deploy": "g-deploy --assets-prefix=https://ig.ft.com/v2/__assets/"
  },
  "eslintConfig": {
    "extends": [
      "airbnb",
      "plugin:flowtype/recommended"
    ],
    "env": {
      "browser": true
    },
    "rules": {
      "react/jsx-props-no-spreading": 0,
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      ],
      "import/no-extraneous-dependencies": [
        2,
        {}
      ],
      "max-len": 0,
      "import/prefer-default-export": 0,
      "no-underscore-dangle": 0
    }
  },
  "eslintIgnore": [
    "flow-typed",
    "dist"
  ],
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "homepage": "./ig-images/"
}
